process {
  withName: GET_MASTER_TABLE {
      publishDir = [
          path: { "${params.outdir}/6_summary/6a_master_table" },
          mode: params.publish_dir_mode,
          saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
      ]
  }

  withName: GET_BIN_PLOT {
      publishDir = [
          path: { "${params.outdir}/6_summary/6b_bin_plot" },
          mode: params.publish_dir_mode,
          saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
      ]
      ext.bins = "[(0,140), (140,145), (145,150), (150,155), (155,1000)]" // number and range of bins to plot
      ext.use_ratio = 0 // plot read count ratio or count within each bin for each sample: 1 for ratio, 0 for count
      ext.use_repeat_unit_bp = 1 // label unit: set to 1 to label using number of "repeat unit", the length of "repeat unit" is defined in "repeat_unit_bp" below
      ext.repeat_unit_bp = 3 // number of base pair in the repeat unit
      

  }

}
