/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run test/urlpipe -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    mode = "nanopore_preprocess"
    input_nanopore_preprocess  = "/home/kai.hu-umw/pi/michael.brodsky-umw/nanopore/NP4/res/all_sample.fastq.gz"
    outdir = "./results_nanopore_preprocess_np4_mm"
    ref = 'assets/ref_mm_short.fa' // expected is ref_mm.fa
}

process {
    withName: DEMULTIPLEX {
        ext.args = "${projectDir}/assets/sample_barcode_np4.txt"
    }
}